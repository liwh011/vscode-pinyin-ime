{
	"name": "chinese-ime",
	"displayName": "拼音输入法",
	"description": "基于VSC补全项实现的简易拼音输入法，避免使用中文编程时需要来回按Shift切换中英输入的问题",
	"version": "0.0.1",
	"publisher": "liwh011",
	"repository": {
		"type": "git",
		"url": "https://github.com/liwh011/vscode-pinyin-ime.git"
	},
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:chinese-ime.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "chinese-ime.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/ramda": "^0.27.40",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"ramda": "^0.27.1",
		"sqlite3": "^5.0.2"
	}
}
